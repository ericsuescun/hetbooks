<div class="container">
  <div class="row">
    <div class="col-12 col-lg-12 mx-auto">
      <h1>Profesiones</h1>

      <%= will_paginate @professions, :renderer => WillPaginate::ActionView::Bootstrap4LinkRenderer %>
      <table class="table table-striped">
        <thead>
          <tr>
            <th>Título</th>
            <th>Descripción</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
          <% @professions.each do |profession| %>
            <tr>
              <td><%= profession.title %></td>
              <td><%= profession.description %></td>
              <td><%= link_to 'Detalles', profession %></td>
              <td><%= link_to 'Editar', edit_profession_path(profession) %></td>
              <td><%= link_to 'Borrar', profession, method: :delete, data: { confirm: '¿Confirmas la operación?' } %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
      <%= link_to 'Nueva profesión', new_profession_path %>
    </div>
  </div>
</div>
