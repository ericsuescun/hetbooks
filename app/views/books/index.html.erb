<p id="notice"><%= notice %></p>

<h4>Importar datos</h4>
<%= form_tag import_books_path, multipart: true do %>
  <%= file_field_tag :file %>
  <%= submit_tag "Importar CSV" %>
<% end %>


<h1>Books</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Discipline</th>
      <th>Topic</th>
      <th>Specialty</th>
      <th>Specialty2</th>
      <th>Price</th>
      <th>Edition</th>
      <th>Pub year</th>
      <th>Isbn 10</th>
      <th>Isbn 13</th>
      <th>Pages</th>
      <th>Size</th>
      <th>Cover</th>
      <th>Volumes</th>
      <th>Index</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.title %></td>
        <td><%= book.description %></td>
        <td><%= book.discipline %></td>
        <td><%= book.topic %></td>
        <td><%= book.specialty %></td>
        <td><%= book.specialty2 %></td>
        <td><%= book.price %></td>
        <td><%= book.edition %></td>
        <td><%= book.pub_year %></td>
        <td><%= book.isbn_10 %></td>
        <td><%= book.isbn_13 %></td>
        <td><%= book.pages %></td>
        <td><%= book.size %></td>
        <td><%= book.cover %></td>
        <td><%= book.volumes %></td>
        <td><%= book.index %></td>
        <td><%= link_to 'Show', book %></td>
        <td><%= link_to 'Edit', edit_book_path(book) %></td>
        <td><%= link_to 'Destroy', book, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Book', new_book_path %>
