<div class="container">
  <div class="row">
    <div class="col-12 col-lg-12 mx-auto">
      <h4>Importar datos</h4>
      <%= form_tag import_books_path, multipart: true do %>
        <%= file_field_tag :file %>
        <%= submit_tag "Importar CSV" %>
      <% end %>


      <h1>Libros</h1>
      <div class="row">
        <div class="col-12 col-lg-12">
          <div class="alert alert-info mt-3">
            <h4>Buscar:</h4>
              <%= form_tag books_path, method: "get" do %>
              <div class="row">
                <div class="col-12 col-lg-2">
                  <div class="form-group">
                    <%= search_field_tag :title, params[:title], placeholder: "Título", class: "form-control" %>
                  </div>
                </div>
                <div class="col-12 col-lg-2">
                  <div class="form-group">
                    <%= search_field_tag :discipline, params[:discipline], placeholder: "Disciplina", class: "form-control" %>
                  </div>
                </div>
                <div class="col-12 col-lg-2">
                  <div class="form-group">
                    <%= search_field_tag :topic, params[:topic], placeholder: "Tema", class: "form-control" %>
                  </div>
                </div>
                <div class="col-12 col-lg-2">
                  <div class="form-group">
                    <%= button_tag "Buscar", class: "btn btn-primary btn-block" %>
                  </div>
                </div>
              </div>
            <% end %>
          </div>
        </div>
      </div>
      <br>
      <%= will_paginate @customers, :renderer => WillPaginate::ActionView::Bootstrap4LinkRenderer %>
      <% @books.each do |book| %>
        <div class="card mb-3 mx-3">
          <div class="row no-gutters">
            <div class="col-md-4">
              <img src="..." class="card-img" alt="...">
            </div>
            <div class="col-md-8">
              <div class="card-body">
                <h5 class="card-title"><%= book.title %></h5>
                <p class="card-text"><%= book.description %></p>
                <div class="row">
                  <div class="col-4">
                    <strong>Disciplina:</strong>
                    <%= book.discipline %>
                  </div>
                  <div class="col-4">
                    <strong>Tema:</strong>
                    <%= book.topic %>
                  </div>
                  <div class="col-4">
                    <%= book.specialty2 %>
                  </div>
                </div>
                <div class="row">
                  <div class="col-4">
                    <strong>Precio:</strong>
                    <%= book.price %>
                  </div>
                  <div class="col-4">
                    <strong>Edición</strong>
                    <%= book.edition %>
                  </div>
                  <div class="col-4">
                    <strong>Año de publicación:</strong>
                    <%= book.pub_year %>
                  </div>
                </div>
                <div class="row">
                  <div class="col-4">
                    <strong>Páginas:</strong>
                    <%= book.pages %>
                  </div>
                  <div class="col-4">
                    <strong>Dimensiones:</strong>
                    <%= book.size %>
                  </div>
                  <div class="col-4">
                    <strong>Tipo de portada:</strong>
                    <%= book.cover %>
                  </div>
                </div>
                 <div class="row">
                  <div class="col-4">
                    <strong>Tomo:</strong>
                    <%= book.volumes %>
                  </div>
                  <div class="col-4">
                    <strong>Índice:</strong>
                    <%= book.index %>
                  </div>
                </div>
                <div class="row">
                  <div class="col-12 mt-3 d-flex justify-content-end">
                    <%= link_to 'Detalles', book, class: "btn btn-primary mr-1" %>
                    <%= link_to 'Editar', edit_book_path(book), class: "btn btn-primary mr-1" %>
                    <%= link_to 'Borrar', book, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-primary mr-1" %>
                  </div>
                </div>
                <p class="card-text"><small class="text-muted"><%= book.isbn_10 %></small></p>
                <p class="card-text"><small class="text-muted"><%= book.isbn_13 %></small></p>
              </div>
            </div>
          </div>
        </div>
      <% end %>



      <%= link_to 'Nuevo libro', new_book_path %>

    </div>
  </div>
</div>