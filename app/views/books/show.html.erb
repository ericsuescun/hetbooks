<div class="container">
  <div class="row">
    <div class="col-12 col-lg-4">
      <p id="notice"><%= notice %></p>

      <%= form_for [@book, @book.pictures.build] do |f| %>
        <div class="actions mb-3 picManager">
          <%= f.file_field :image, class: "btn btn-secondary btn-block" %>
        </div>
        <p class="mb-0">Máximo 3 fotos de hasta 10MB cada una.</p>
        <div class="actions">
          <%= f.submit "Guardar imagen", class: "btn btn-warning btn-block mb-3" %>
        </div>
      <% end %>

      <p>
        <strong>Título:</strong>
        <%= @book.title %>
      </p>

      <p>
        <strong>Descripción:</strong>
        <%= @book.description %>
      </p>

      <p>
        <strong>Disciplina:</strong>
        <%= @book.discipline %>
      </p>

      <p>
        <strong>Tema:</strong>
        <%= @book.topic %>
      </p>

      <p>
        <strong>Especialidad:</strong>
        <%= @book.specialty %>
      </p>

      <p>
        <strong>Especialidad 2:</strong>
        <%= @book.specialty2 %>
      </p>

      <p>
        <strong>Precio:</strong>
        <%= @book.price %>
      </p>

      <p>
        <strong>Edicion:</strong>
        <%= @book.edition %>
      </p>

      <p>
        <strong>Año:</strong>
        <%= @book.pub_year %>
      </p>

      <p>
        <strong>Isbn 10:</strong>
        <%= @book.isbn_10 %>
      </p>

      <p>
        <strong>Isbn 13:</strong>
        <%= @book.isbn_13 %>
      </p>

      <p>
        <strong>Páginas:</strong>
        <%= @book.pages %>
      </p>

      <p>
        <strong>Dimensiones:</strong>
        <%= @book.size %>
      </p>

      <p>
        <strong>Cubierta:</strong>
        <%= @book.cover %>
      </p>

      <p>
        <strong>Tomos:</strong>
        <%= @book.volumes %>
      </p>

      <p>
        <strong>Índice:</strong>
        <%= @book.index %>
      </p>

      <%= link_to 'Editar', edit_book_path(@book) %> |
      <%= link_to 'Volver', books_path %>

    </div>
  </div>
</div>
