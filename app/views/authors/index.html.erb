<div class="container">
  <div class="row">
    <div class="col-12 col-lg-12 mx-auto">
      <h1>Autores</h1>

      <table class="table table-striped">
        <thead>
          <tr>
            <th>Nombres</th>
            <th>Apellidos</th>
            <th>Universidad</th>
            <th>Título</th>
            <th>Compañía</th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
          <% @authors.each do |author| %>
            <tr>
              <td><%= author.name %></td>
              <td><%= author.lastname %></td>
              <td><%= author.university %></td>
              <td><%= author.job_title %></td>
              <td><%= author.company %></td>
              <td><%= link_to 'Detalles', author %></td>
              <td><%= link_to 'Editar', edit_author_path(author) %></td>
              <td><%= link_to 'Borrar', author, method: :delete, data: { confirm: '¿Confirmas la operación?' } %></td>
            </tr>
          <% end %>
        </tbody>
      </table>

      <br>

      <%= link_to 'Nuevo autor', new_author_path %>

    </div>
  </div>
</div>

