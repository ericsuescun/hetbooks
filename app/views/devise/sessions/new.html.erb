<div class="container">
  <div class="row">
    <div class="col-12 col-lg-4 mx-auto">
      <h2>Ingresar</h2>

      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="form-group">
          <%= f.label "Correo electrónico" %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control input" %>
        </div>

        <div class="form-group">
          <%= f.label "Contraseña" %><br />
          <%= f.password_field :password, autocomplete: "current-password", class: "form-control input" %>
        </div>

        <% if devise_mapping.rememberable? %>
          <div class="form-group">
            <%= f.check_box :remember_me %>
            <%= f.label "Recuérdame" %>
          </div>
        <% end %>

        <div class="actions">
          <%= f.submit "Ingresar", class: "btn btn-primary" %>
        </div>
      <% end %>

      <%= render "devise/shared/links" %>

    </div>
  </div>
</div>
