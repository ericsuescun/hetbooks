<p id="notice"><%= notice %></p>

<p>
  <strong>Nombre:</strong>
  <%= @customer.fullname %>
</p>

<p>
  <strong>Celular:</strong>
  <%= @customer.cel %>
</p>

<p>
  <strong>Teléfono:</strong>
  <%= @customer.tel %>
</p>

<p>
  <strong>Dirección:</strong>
  <%= @customer.address %>
</p>

<p>
  <strong>Ciudad:</strong>
  <%= @customer.city %>
</p>

<p>
  <strong>Email:</strong>
  <%= @customer.email %>
</p>

<p>
  <strong>Título:</strong>
  <% @customer.professions.each do |profession| %>
    <%= profession.title %>
  <% end %>
</p>

<% @customer.specialities.each do |speciality| %>
  <p>Especialidad: <%= speciality.title %></p>
    <table class="table table-striped dense">
      <head>
        <tr>
          <th>Título</th>
          <th>Descripción</th>
          <th>Tópico</th>
        </tr>
      </head>
      <body>
        <% Book.joins(:specialities).where(specialities: { title: speciality.title }).each do |book| %>
          <tr class="m-0 p-0">
            <td class="p-0"><%= book.title %></td>
            <td class="p-0"><%= book.description %></td>
            <td class="p-0"><%= book.topic %></td>

          </tr>
        <% end %>
      </body>
    </table>

<% end %>


<%= link_to 'Editar', edit_customer_path(@customer) %> |
<%= link_to 'Vovler', customers_path %>
