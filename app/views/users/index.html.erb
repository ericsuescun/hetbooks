<div class="container">
  <div class="row">
    <div class="col-12 col-lg-8 mx-auto">
      <h1>Usuarios</h1>

      <table class="table table-hover">
        <thead>
          <tr>
            <th>Nombre</th>
            <th>Apellido</th>
            <th>Celular</th>
            <th>Teléfono</th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
          <% @users.each do |user| %>
            <tr>
              <td><%= user.name %></td>
              <td><%= user.lastname %></td>
              <td><%= user.cel %></td>
              <td><%= user.tel %></td>
              <td><%= link_to 'Detalles', user %></td>
              <td><%= link_to 'Editar', edit_user_path(user) %></td>
              <td><%= link_to 'Borrar', user, method: :delete, data: { confirm: 'Confirmas la operación?' } %></td>
            </tr>
          <% end %>
        </tbody>
      </table>

      <br>

      <%= link_to 'Nuevo usuario', new_user_path %>
    </div>
  </div>
</div>
